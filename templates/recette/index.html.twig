

{% block body %}


  <div class="row">
    <div class="col-12">
      <div class="card mb-4">
        <div class="card-header pb-0">
          <h6>Recettes Table</h6>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
          <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
              <thead>
              <tr>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Id</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Nom Recette</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ingredients</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Temps Preparation</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
              </tr>
              </thead>
              <tbody>
              {% for recette in recettes %}
                <tr>
                  <td>{{ recette.id }}</td>
                  <td>{{ recette.nomRecette }}</td>
                  <td>{{ recette.ingredients }}</td>
                  <td>{{ recette.tempsPreparation }}</td>
                  <td class="align-middle">
                    <div class="d-flex justify-content-center">
                      <a href="{{ path('app_recette_show', {'id': recette.id}) }}" class="text-secondary font-weight-bold text-xs me-2" data-toggle="tooltip" data-original-title="Show recette">
                        <i class="fas fa-eye me-1"></i> Show
                      </a>
                      <a href="{{ path('app_recette_edit', {'id': recette.id}) }}" class="text-secondary font-weight-bold text-xs me-2" data-toggle="tooltip" data-original-title="Edit recette">
                        <i class="fas fa-edit me-1"></i> Edit
                      </a>
                      <a href="#" class="text-secondary font-weight-bold text-xs me-2" data-toggle="tooltip" data-original-title="Delete recette">
                        <i class="fas fa-trash-alt me-1"></i> Delete
                      </a>
                    </div>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="5">No records found</td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div>
        <button class="btn btn-default" id="showCreateRecetteModal">Create new Recette</button>
      </div>


      <script>
        document.getElementById('showCreateRecetteModal').addEventListener('click', function () {
          document.getElementById('createRecetteModal').style.display = 'block';
        });

        document.querySelector('#createRecetteModal .btn-close').addEventListener('click', function () {
          document.getElementById('createRecetteModal').style.display = 'none';
        });
      </script>

    </div>

  </div>


{% endblock %}
